{
  "name": "yippy/flarum-tag-with-themes",
  "description": "Provide multiple themes choices for discussion layout by tag.",
  "keywords": [
    "flarum",
    "themes",
    "base",
    "tag"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "funding": [
      {
          "type": "other",
          "url": "https://www.buymeacoffee.com/yippy"
      }
  ],
  "require": {
    "flarum/core": "^2.0.0",
    "flarum/tags": "*"
  },
  "authors": [
    {
      "name": "Yippy",
      "email": "yippym@gmail.com",
      "role": "Developer"
    }
  ],
  "support": {
      "issues": "https://github.com/Yippy/flarum-tag-with-themes/issues",
      "source": "https://github.com/Yippy/flarum-tag-with-themes",
      "forum": "https://discuss.flarum.org/d/34412-tag-with-themes"
  },
  "autoload": {
    "psr-4": {
      "Yippy\\FlarumTagWithThemes\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Tag with Themes",
      "category": "theme",
      "icon": {
          "name": "fas fa-paint-roller",
          "background": "linear-gradient(90deg, #5461c8 12.5%, #c724b1 0, #c724b1 25%, #e4002b 0, #e4002b 37.5%, #ff6900 0, #ff6900 50%, #f6be00 0, #f6be00 62.5%, #97d700 0, #97d700 75%, #00ab84 0, #00ab84 87.5%, #00a3e0 0)",
          "color": "#fff"
      },
      "optional-dependencies": [
          "flarum/tags",
          "flarum/approval"
      ]
    }
  }
}
